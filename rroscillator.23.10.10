heatmap_rgb(x) => 
   
    
    R = 0.0
    G = 0.0
    if x > 0 and x < 25
        R := 128 + (127 * (x / 25))
        G := 0.0
        
    else if  x>=25 and x < 50
        R := 255
        G := 255 * ((x - 25) / 25)
        
    else if x>=50 and x<75
        R := 255 * (1 - ((x - 50) / 25))
        G := 255
       
    else 
        R := 0.0
        G := 255 - (127 * ((x - 75) / 25))
        
    color.rgb(math.round(R), math.round(G),0)



